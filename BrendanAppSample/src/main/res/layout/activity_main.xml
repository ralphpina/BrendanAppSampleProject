<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/textView"
        android:layout_above="@+id/editTextId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POST"
        android:id="@+id/buttonPostInfo"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonGetCustomers" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET"
        android:id="@+id/buttonGetCustomers"
        android:layout_alignTop="@+id/buttonPostInfo"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUT"
        android:id="@+id/buttonPutInfo"
        android:singleLine="false"
        android:layout_alignTop="@+id/buttonPostInfo"
        android:layout_alignRight="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextName"
        android:layout_above="@+id/buttonPostInfo"
        android:layout_alignLeft="@+id/buttonGetCustomers"
        android:layout_marginLeft="14dp"
        android:hint="name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextId"
        android:layout_above="@+id/editTextName"
        android:layout_alignLeft="@+id/editTextName"
        android:hint="id" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/buttonDelete"
        android:layout_below="@+id/editTextName"
        android:layout_toLeftOf="@+id/buttonPutInfo" />

</RelativeLayout>
